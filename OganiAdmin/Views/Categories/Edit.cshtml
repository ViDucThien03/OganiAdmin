@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OganiAdmin.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4 ms-lg-3">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CateId" />
            <div class="form-group">
                <label asp-for="CateName" class="control-label"></label>
                <input asp-for="CateName" class="form-control" />
