@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OganiAdmin.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

<div class="col-12 ">
    <div class="bg-light rounded h-100 p-4 vh-100">
        <h3 class="mb-4">Edit Category</h3>
        <div class="row">
            <div class="col-md-4 ms-lg-3">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CateId" />
                    <div class="form-group">
                        <label asp-for="CateName" class="control-label"></label>
                        <input asp-for="CateName" class="form-control" />
                        <span asp-validation-for="CateName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary mt-lg-2" />
                    </div>
                </form>
            </div>
        </div>

        <div class=" ms-lg-3 mt-lg-2">
            <a asp-action="Index">Back to List</a>
        </div>
        
    </div>
</div>


