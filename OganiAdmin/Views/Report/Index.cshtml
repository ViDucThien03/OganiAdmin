@{
    ViewData["Title"] = "Index";
    var dailyReport = ViewData["DailyReport"] as IEnumerable<dynamic>;
    var monthlyReport = ViewData["MonthlyReport"] as IEnumerable<dynamic>;
    var yearlyReport = ViewData["YearlyReport"] as IEnumerable<dynamic>;
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}
<div class="col-12 ">
    <div class="bg-light rounded h-100 p-4 vh-100">
        <div class="ml-3"></div>
       <h1>Daily Report</h1>
        <a asp-controller="ExportReport" asp-action="ExportDailyReport" class="btn btn-primary"><i class="fa fa-download me-2"></i>Export Daily Report</a>


        <table id="tblDailyReport" class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Order Count</th>
                    <th>Total Revenue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in dailyReport)
                {
                    <tr>
                        <td>@item.OrderDate.ToShortDateString()</td>
                        <td>@item.OrderCount</td>
                        <td>@item.TotalRevenue.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>

        <h1>Monthly Report</h1>
        <a asp-controller="ExportReport" asp-action="ExportMonthlyReport" class="btn btn-primary"><i class="fa fa-download me-2"></i>Export Monthly Report</a>
        <table id="tblMonthlyReport" class="table">
            <thead>
                <tr>
                    <th>Year</th>
                    <th>Month</th>
                    <th>Order Count</th>
                    <th>Total Revenue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in monthlyReport)
                {
                    <tr>
                        <td>@item.OrderYear</td>
                        <td>@item.OrderMonth</td>
                        <td>@item.OrderCount</td>
                        <td>@item.TotalRevenue.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>

        <h1>Yearly Report</h1>
        <a asp-controller="ExportReport" asp-action="ExportYearlyReport" class="btn btn-primary"><i class="fa fa-download me-2"></i>Export Yearly Report</a>
        <table id="tblYearlyReport" class="table">
            <thead>
                <tr>
                    <th>Year</th>
                    <th>Order Count</th>
                    <th>Total Revenue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in yearlyReport)
                {
                    <tr>
                        <td>@item.OrderYear</td>
                        <td>@item.OrderCount</td>
                        <td>@item.TotalRevenue.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
