
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Category>
<div class="col-12 " >
    <div class="bg-light rounded h-100 p-4 vh-100">
        <h3 class="mb-4">Categories</h3>
        <a  asp-action="Create" class="btn btn-primary">+ Add new product</a>
        <div class="table-responsive">
            <table class="table w-50 text-black">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Category name</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row">@item.CateId</th>
                        <td>@item.CateName</td>
                        

                        <td>
                            <a href="#" class="me-4"><i class="fa-solid fa-arrows-rotate"></i></a>
                            <a href="#"><i class="fa-solid fa-trash-can" style="width: 24px; height: 24px"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class=" col-6 text-center">
            <nav aria-label="Page navigation example " >
                <ul class="pagination justify-content-center">
                    @Html.PagedListPager(Model, page => Url.Action("Categories", new { page = page })
                             ,
                             new PagedListRenderOptions
                    {
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" }
                    })
                </ul>
            </nav>
        </div>
    </div>
</div>      
